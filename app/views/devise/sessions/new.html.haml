.header
  .header__title
    = link_to image_tag(src="titleicon3.png", size: "150x60"), root_path
  .header__right
    .header__right__create
      = link_to "Sign up", new_user_registration_path, class: "link"
.AccountPage
  .AccountPage__box
    .AccountPage__top
      .AccountPage__top__title
        Log in
    .AccountPage__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .FormField
          .FormField__label--normal
            = f.label :email
          .FormField__input--normal
            = f.email_field :email, autofocus: true
          .FormField
            .FormField__label--normal
              = f.label :password
              %i (英数字8文字以上)
            .FormField__input--normal
              = f.password_field :password, autocomplete: "off"
          .actions
            = f.submit "Log in", class: 'Button UserButton'
          
